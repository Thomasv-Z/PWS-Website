---
// Component Imports
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title='EenVoor1Leven - Contact'>
<body class="sub_page">
  <section class="contact_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Neem contact op
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container contact-form">
            <form action="">
                <div>
                  <input type="text" placeholder="Uw naam" />
                </div>
                <div>
                  <input type="text" placeholder="Telefoonnummer" />
                </div>
              <div>
                <input type="email" placeholder="E-mail" />
              </div>
              <div>
                <input type="text" class="message-box" placeholder="Bericht" />
              </div>
              <div class="btn_box">
                <button>
                  Verzenden
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container">
            <div class="map wow fadeIn">
              <div id="googleMap"><iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2427.3751063958416!2d5.712150299999999!3d52.5266471!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c62afc66859531%3A0x586b006de213e7f!2sHet%20Copernicous!5e0!3m2!1snl!2snl!4v1639230132849!5m2!1snl!2snl"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</MainLayout>